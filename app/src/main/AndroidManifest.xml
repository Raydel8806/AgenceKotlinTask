<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.campingstudio.agencekotlin">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.agencekotlin">
        <activity
            android:name="com.campingstudio.agencekotlin.ui.view.ShoppActivity"
            android:exported="true"
            android:label="@string/title_activity_shop_activity"
            android:theme="@style/Theme.agencekotlin.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.campingstudio.agencekotlin.ui.view.ProductDetailActivity"
            android:exported="true"
            android:label="@string/title_activity_product_detail"
            android:theme="@style/Theme.agencekotlin.NoActionBar" />
        <activity
            android:name="com.campingstudio.agencekotlin.ui.view.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.agencekotlin.NoActionBar">
        </activity>
    </application>
</manifest>